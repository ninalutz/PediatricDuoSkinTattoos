.expanded.row
  .top-bar
  	.top-bar-left
      ul.dropdown-menu
        li.menu-text MIT Medical
        li = link_to 'Download Report', patient_path(id: @patient.id,format: 'pdf')

.row
  .small-6.columns
    = wicked_pdf_image_tag @patient.bio_pic
  .small-6.columns
    h2 = @patient.name
    table
      tr
        td Attending doctor
        td = @patient.doctor
      tr
        td Patient ID
        td = @patient.id
      tr
        td Address
        td = @patient.address
      tr
        td Phone
        td = @patient.phone
      tr
        td Gender
        td = @patient.gender
      tr
        td Email
        td = @patient.email

.row
  .small-6.columns
    h3 Problems
    ul
      li Problem 1
      li Lorem Ipsum
      li Dolor Sit Amet
  .small-6.columns
    h3 Medications
    ul
      li Med 1
      li Med 2
      li Med 3

.row
  .small-12.columns
    h3 Report Log
    table
      thead
        tr
          th Body Part
          th Pain Level
          th Time
      - @patient.pain_logs.each do |t|
        tr
          td = t.body_part
          td = t.pain_level
          td = t.created_at
